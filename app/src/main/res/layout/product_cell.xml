<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="95dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/productCollectionImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/productTitle"
            app:layout_constraintBottom_toBottomOf="@+id/collectionImage"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="@+id/productCollectionImage"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/productCollectionImage" android:layout_marginStart="8dp"
            android:textStyle="bold" android:fontFamily="serif-monospace"/>
    <TextView
            android:text="TextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/productInventory"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/productCollectionImage"
            app:layout_constraintEnd_toStartOf="@+id/CollectionTitle" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/CollectionTitle" android:fontFamily="serif-monospace"
            android:textSize="10sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/CollectionTitle"
            app:layout_constraintStart_toEndOf="@+id/productInventory" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="italic" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/productTitle"/>
</android.support.constraint.ConstraintLayout>